<%- include('header') -%>  

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Előadó 
                    <% if(typeof eloado === 'undefined') { %>
                        hozzáadása 
                    <% } else { %>
                        módosítása 
                    <% } %>
                </h2></br>
                <form method="POST">
                    <div class="form-group">
                        <label for="eloado_nev">Előadó neve:</label>
                        <input type="text" class="form-control" id="eloado_nev" name="eloado_nev" value="<%= typeof eloado === 'undefined' ? '' : eloado.eloado_nev %>">
                    </div>
                    <div class="form-group">
                        <label for="mufaj">Műfaj:</label>
                        <input type="text" class="form-control" id="mufaj" name="mufaj" value="<%= typeof eloado === 'undefined' ? '' : eloado.mufaj %>">
                    </div>
                    <div class="form-group">
                        <label for="alapitas_ev">Alapítás éve:</label>
                        <input type="text" class="form-control" id="alapitas_ev" name="alapitas_ev" value="<%= typeof eloado === 'undefined' ? '' : eloado.alapitas_ev %>">
                    </div>
                        
                    <input type="submit" class="btn btn-primary" value="Mentés"/>  
                    <a class="btn btn-link" href="/">Vissza</a>
                </form>
            </div>
        </div>
    </div> 

<%- include('footer') -%>  
