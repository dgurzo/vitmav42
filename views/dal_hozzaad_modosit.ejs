<%- include('header') -%>  

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Dal
                    <% if(typeof dal === 'undefined') { %>
                        hozzáadása
                    <% } else { %>
                        módosítása
                    <% } %>
                </h2> </br>
                <form method="POST">
                    <div class="form-group">
                        <label for="cim">Cím:</label>
                        <input type="text" class="form-control" id="cim" name="cim" value="<%= typeof dal === 'undefined' ? '' : dal.cim %>">
                    </div>
                    <div class="form-group">
                        <label for="album">Album:</label>
                        <input type="text" class="form-control" id="album" name="album" value="<%= typeof dal === 'undefined' ? '' : dal.album %>">
                    </div>
                    <div class="form-group">
                        <label for="kiadasev">Kiadás éve:</label>
                        <input type="text" class="form-control" id="kiadasev" name="kiadasev" value="<%= typeof dal === 'undefined' ? '' : dal.kiadasev %>">
                    </div>
                                
                    <input type="submit" class="btn btn-primary" value="Mentés"/>
                    <a class="btn btn-link" href="/dal/<%= eloado._id %>">Vissza</a>
                </form>
            </div>
        </div>
    </div> 

<%- include('footer') -%>  
