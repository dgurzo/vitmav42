<%- include('header') -%>   
        
<div class="container">
    <div class="row">
        <div class="col-12">
            <div align="center">
                <h1>Dallista</h1></br>
            </div>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Előadó neve</th>
                    <th>Műfaj</th>
                    <th>Alapítás éve</th>
                    <th>&nbsp;</th>
                </tr>

                <% eloadok.forEach(function(egyEloado) { %>
                <tr>
                    <td> <%= egyEloado.eloado_nev %> </td>
                    <td> <%= egyEloado.mufaj %> </td>
                    <td> <%= egyEloado.alapitas_ev %> </td>
                    <td>
                        <a href="/dal/<%= egyEloado._id %>" class="btn btn-sm btn-primary">Dalok megtekintése</a>
                        <a href="/eloado/edit/<%= egyEloado._id %>" class="btn btn-sm btn-primary">Módosítás</a>
                        <a href="#" class="btn btn-sm btn-danger">Törlés</a>
                    </td>
                </tr>
                <% }); %>

            </table>
            <a href="/eloado/new" class="btn btn-block btn-primary">Új előadó</a>
        </div>
    </div>
</div>

<%- include('footer') -%>  